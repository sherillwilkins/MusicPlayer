<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:backgroundTint="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/config_margin_10dp">

        <LinearLayout
            android:id="@+id/music_tab_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    android:id="@+id/music_tab_disc"
                    style="@style/RadiusImageView.Circle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/icon_musictab_disc" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/music_tab_body"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/music_tab_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:text="暂无歌曲" />

                    <TextView
                        android:id="@+id/music_tab_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.xuexiang.xui.widget.imageview.IconImageView
                        android:id="@+id/music_tab_before"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/icon_before_step" />

                    <com.xuexiang.xui.widget.imageview.IconImageView
                        android:id="@+id/music_tab_play"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/icon_music_play" />

                    <com.xuexiang.xui.widget.imageview.IconImageView
                        android:id="@+id/music_tab_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/icon_next_step" />

                    <com.xuexiang.xui.widget.imageview.IconImageView
                        android:id="@+id/music_tab_list"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/icon_musictab_list" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>